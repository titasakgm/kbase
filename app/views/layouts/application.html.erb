<!DOCTYPE html>
<html>
<head>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <title>Kbase</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
 
      <!-- Be sure to leave the brand out there if you want it shown -->
      <a class="brand" href="#">Kbase</a>
 
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Notes", kbs_path %></li>
          <% if is_admin? %>
            <li class="divider-vertical"></li>
            <li><%= link_to "Users", users_path %></li>
          <% end %>
        </ul>
      </div>
      <div class="nav pull-right">
        <ul class="nav">
          <li class="divider-vertical"></li>
          <form class="navbar-search" id="search">
            <input type="text" id="q" class="search-query span3"
             placeholder="Search" values="<%= params[:q] %>">
          </form>
          <li class="divider-vertical"></li>
          <% if current_user %>
            <li class="welcome"><%= link_to "#{current_user.email}", "#" %>
            <li class="divider-vertical"></li>
            <li><%= link_to "Log Out", logout_path %>
          <% else %>
            <li><%= link_to "Sign Up", signup_path %>
            <li class="divider-vertical"></li>
            <li><%= link_to "Log In", login_path %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% flash.each do |name,msg| %>
    <div class="alert alert-<%= name == :notice ? 'success' : 'error' %>">
      <a class="close" data-dismiss="alert">&otimes;</a>
      <%= msg %>
    </div>
  <% end %>
  <div class="row">
    <div class="span10">
      <%= yield %>
    </div>
    <div class="span2">
      <div class="well sidebar-nav">  
        <ul class="nav nav-list">  
          <li class="nav-header">Our Visitors</li>  
        </ul>  
        <script type="text/javascript" src="http://jg.revolvermaps.com/r.js"></script>
        <script type="text/javascript">rm_f1st('8','120','true','false','000000','6ll3l29icx4','true','ff0000');
        </script>
        <noscript>
        <applet codebase="http://rg.revolvermaps.com/j" code="core.RE" width="120" height="120" archive="g.jar">
          <param name="cabbase" value="g.cab" />
          <param name="r" value="true" />
          <param name="n" value="false" />
          <param name="i" value="6ll3l29icx4" />
          <param name="m" value="8" />
          <param name="s" value="120" />
          <param name="c" value="ff0000" />
          <param name="v" value="true" />
          <param name="b" value="000000" />
          <param name="rfc" value="true" />
        </applet>
        </noscript>
      </div>
    </div>  
  </div>
</div>
</body>
</html>
