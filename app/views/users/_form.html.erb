<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /User</legend>

    <%= f.input :email %>
    <% if is_admin? %>
      <%= f.input :role,
                  :as => :select,
                  :collection => ['member','admin']
      %>
    <% else %>
      <%= f.input :role, :as => :hidden, :input_html => {:value => 'member'} %>
    <% end %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>

    <%= f.button :submit, :label => "OK" %>

  </fieldset>
<% end %>
